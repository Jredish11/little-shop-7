<h1>Create New Item</h1>

<%= form_with model: @item, url: merchant_items_path(@merchant) do |form|  %>
  <p><%= form.label :name %>
  <%= form.text_field :name %></p>
  <p><%= form.label :description %>
  <%= form.text_field :description %></p>
  <p><%= form.label :unit_price, "Current Price" %>
  <%= form.number_field :unit_price %></p>
  <p><%= form.submit "Submit"  %>
  
<% end %>