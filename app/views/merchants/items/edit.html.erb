<h1>Item Edit Page</h1>

<% @merchant.items.each do |item| %>

<%= form_with model: [@merchant, item], local: true do |form|  %>
  <p><%= form.label :name %>
  <%= form.text_field :name %></p>
  <p><%= form.label :description %>
  <%= form.text_field :description %></p>
  <p><%= form.label :unit_price, "Current selling price" %>
  <%= form.number_field :unit_price %></p>
  <p><%= form.submit "Submit"  %>
  <% end %>
<% end %>